# WAHA MOD - Environment Variables Template
# Copy this file to .env and customize the values

# =============================================================================
# API SECURITY (REQUIRED)
# =============================================================================
# Your secret API key - CHANGE THIS!
WAHA_API_KEY=your-super-secret-api-key-change-me

# Port for WAHA (default: 3000)
WAHA_PORT=3000

# =============================================================================
# WEBHOOKS (Optional)
# =============================================================================
# URL to receive webhook events
# WHATSAPP_HOOK_URL=https://your-domain.com/webhook

# Events to listen (comma separated)
# Available: message, message.any, message.ack, state.change, group.join, etc.
# WHATSAPP_HOOK_EVENTS=message,message.any,state.change

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# Print QR code in console (true/false)
WAHA_PRINT_QR=true

# Auto-start session on boot (optional, comma separated session names)
# WHATSAPP_START_SESSION=default,customer1

# =============================================================================
# FILE UPLOADS
# =============================================================================
# Maximum file upload size
WAHA_FILE_UPLOAD_LIMIT=50mb

# =============================================================================
# LOGGING
# =============================================================================
# Enable debug mode (uncomment to enable)
# DEBUG=true

# Log level: error, warn, info, debug, verbose
WAHA_LOG_LEVEL=info

# =============================================================================
# DASHBOARD ACCESS
# =============================================================================
# Enable dashboard (true/false)
WAHA_DASHBOARD_ENABLED=true

# Dashboard credentials - CHANGE THESE!
WAHA_DASHBOARD_USERNAME=admin
WAHA_DASHBOARD_PASSWORD=change-this-password

# =============================================================================
# SWAGGER API DOCUMENTATION
# =============================================================================
# Enable Swagger (true/false)
WAHA_SWAGGER_ENABLED=true

# Swagger credentials - CHANGE THESE!
WAHA_SWAGGER_USERNAME=admin
WAHA_SWAGGER_PASSWORD=change-this-password

# =============================================================================
# WHATSAPP ENGINE
# =============================================================================
# Choose engine: WEBJS, NOWEB, or GOWS
# WEBJS - Most stable, browser-based
# NOWEB - Lightweight, no browser needed
# GOWS - Advanced features, requires additional setup
WHATSAPP_DEFAULT_ENGINE=WEBJS

# =============================================================================
# HEALTH CHECK
# =============================================================================
# Media files threshold in MB for health check
WAHA_HEALTH_MEDIA_FILES_THRESHOLD_MB=100

# =============================================================================
# ADVANCED CONFIGURATION (Optional)
# =============================================================================

# Proxy configuration (if needed)
# WHATSAPP_PROXY_SERVER=http://proxy:3128
# WHATSAPP_PROXY_SERVER_USERNAME=user
# WHATSAPP_PROXY_SERVER_PASSWORD=pass

# Custom browser executable (for WEBJS engine)
# WHATSAPP_BROWSER_EXECUTABLE=/usr/bin/chromium-browser

# Session config
# WAHA_SESSION_CONFIG_DEBUG=false
